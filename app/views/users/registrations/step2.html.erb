<%= stylesheet_link_tag 'registration', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container mt-5">
  <h2 class="text-center mb-4">Personal Details</h2>

  <%= form_with model: @user, url: wizard_path(:step2), local: true do |f| %>
    <div class="form-group">
      <%= f.label :first_name, class: 'form-label' %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: 'form-label' %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number, class: 'form-label' %>
      <%= f.text_field :phone_number, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :coach_id, "Select Coach", class: 'form-label' %>
      <%= f.collection_select :coach_id, @coaches, :id, :first_name, { prompt: 'Choose a coach' }, { class: 'form-control', id: 'coach-select' } %>
    </div>
    

    <div class="actions text-center mt-4">
      <%= f.submit 'Submit', class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
